import { Button } from "std-widgets.slint";

component SelectorButton inherits Button {
    height: 40px;
    width: 300px;
}

export component Menu inherits GridLayout {
    in-out property <string> choice: "entry";
    in-out property <bool> view: false;
    in-out property <string> output: "";

    callback view-page({});

    Row {
        SelectorButton {
            text: "Enter";
            clicked => {
                root.choice = "entry";
                root.view = false
            }
        }
        SelectorButton {
            text: "View";
            clicked => {
                root.choice = "view";
                root.view = true;
                view-page({});
            }
        }
    }
}
